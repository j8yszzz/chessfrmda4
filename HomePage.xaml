<Window x:Class="Chess.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game" 
        Height="650" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="Assets/icon.ico"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="MainBtn" TargetType="Button">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#0f3460">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0f3460"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DiffBtn" TargetType="RadioButton">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="7"
                                BorderThickness="2"
                                BorderBrush="#0f3460">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0f3460"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#e94560"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="480">

            <TextBlock Text="Chess.lol" 
                      Foreground="White" 
                      FontSize="44"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,8" FontFamily="MS Reference Sans Serif"/>

            <TextBlock x:Name="TxtWelcome"
                      Text="Welcome!" 
                      Foreground="#b0b0b0" 
                      FontSize="17"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,25"/>

            <Border Background="#16213e" 
                    CornerRadius="25" 
                    Padding="30"
                    BorderThickness="3"
                    BorderBrush="White"
                    Margin="0,0,0,18">

                <StackPanel>
                    <TextBlock Text="Menu" 
                              Foreground="White" 
                              FontSize="20" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,12"/>

                    <Button Content="▶ Start Game" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnPlay_Click"/>

                    <Button Content="⚙ Settings" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnSettings_Click"/>

                    <Button Content="📖 How to Play" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnHelp_Click"/>

                    <Button Content="📊 Statistics" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnStats_Click"/>

                    <Button Content="Logout" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnLogout_Click"
                           Margin="0,15,0,0"/>

                    <Button Content="Exit" 
                           Style="{StaticResource MainBtn}"
                           Click="BtnExit_Click"
                           Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#16213e" 
                    CornerRadius="20" 
                    Padding="15"
                    BorderThickness="3"
                    BorderBrush="white">
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Played: " Foreground="#b0b0b0" FontSize="13"/>
                    <TextBlock x:Name="TxtGamesPlayed" Text="0" Foreground="White" FontSize="13" FontWeight="Bold" Margin="3,0,15,0"/>

                    <TextBlock Text="Won: " Foreground="#b0b0b0" FontSize="13"/>
                    <TextBlock x:Name="TxtWins" Text="0" Foreground="#4ecca3" FontSize="13" FontWeight="Bold" Margin="3,0,15,0"/>

                    <TextBlock Text="Lost: " Foreground="#b0b0b0" FontSize="13"/>
                    <TextBlock x:Name="TxtLosses" Text="0" Foreground="#e94560" FontSize="13" FontWeight="Bold" Margin="3,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border x:Name="PnlSettings" Background="#CC000000" Visibility="Collapsed">
            <Border Background="#1a1a2e" CornerRadius="12" Padding="35" Width="420" Height="380"
                    BorderThickness="3" BorderBrush="#e94560" VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="⚙ Settings" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>

                    <TextBlock Text="AI Difficulty" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,8"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
                        <RadioButton Content="Easy" Style="{StaticResource DiffBtn}" GroupName="Difficulty" Tag="2" x:Name="RbEasy"/>
                        <RadioButton Content="Medium" Style="{StaticResource DiffBtn}" GroupName="Difficulty" Tag="3" x:Name="RbMedium" IsChecked="True"/>
                        <RadioButton Content="Hard" Style="{StaticResource DiffBtn}" GroupName="Difficulty" Tag="4" x:Name="RbHard"/>
                    </StackPanel>

                    <TextBlock Text="Play As" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,18,0,8"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
                        <RadioButton Content="White" Style="{StaticResource DiffBtn}" GroupName="Color" IsChecked="True" x:Name="RbWhite"/>
                        <RadioButton Content="Black" Style="{StaticResource DiffBtn}" GroupName="Color" x:Name="RbBlack"/>
                    </StackPanel>

                    <Button Content="Close" Style="{StaticResource MainBtn}" Click="BtnCloseSettings_Click" Margin="0,25,0,0"/>
                </StackPanel>
            </Border>
        </Border>

        <Border x:Name="PnlHelp" Background="#CC000000" Visibility="Collapsed">
            <Border Background="#1a1a2e" CornerRadius="12" Padding="35" Width="460" MaxHeight="520"
                    BorderThickness="3" BorderBrush="#e94560" VerticalAlignment="Center" HorizontalAlignment="Center">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📖 How to Play" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>

                        <TextBlock TextWrapping="Wrap" Foreground="White" FontSize="15" LineHeight="22">
                            <Run Text="Controls:" FontWeight="Bold" FontSize="17"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="• Click a piece to see where it can move"/>
                            <LineBreak/>
                            <Run Text="• Click the green square to move there"/>
                            <LineBreak/>
                            <Run Text="• Capture enemy pieces by moving to their square"/>
                            <LineBreak/>
                            <Run Text="• Win by checkmating the opponent's king"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="Special Moves:" FontWeight="Bold" FontSize="17"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="• Castling: King moves 2 squares toward rook"/>
                            <LineBreak/>
                            <Run Text="• En Passant: Special pawn capture"/>
                            <LineBreak/>
                            <Run Text="• Promotion: Choose new piece when pawn reaches end"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="Tips:" FontWeight="Bold" FontSize="17"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="• Press ESC during game to pause"/>
                            <LineBreak/>
                            <Run Text="• AI responds automatically after your move"/>
                        </TextBlock>

                        <Button Content="Close" Style="{StaticResource MainBtn}" Click="BtnCloseHelp_Click" Margin="0,25,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <Border x:Name="PnlStats" Background="#CC000000" Visibility="Collapsed">
            <Border Background="#1a1a2e" CornerRadius="12" Padding="35" Width="480" MaxHeight="520"
                    BorderThickness="3" BorderBrush="#e94560" VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="📊 Statistics" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>

                    <Border Background="#16213e" CornerRadius="8" Padding="18" Margin="0,0,0,18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Games Played:" Grid.Row="0" Grid.Column="0" Foreground="#b0b0b0" FontSize="16" Margin="0,4"/>
                            <TextBlock x:Name="StGames" Text="0" Grid.Row="0" Grid.Column="1" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,4"/>

                            <TextBlock Text="Wins:" Grid.Row="1" Grid.Column="0" Foreground="#b0b0b0" FontSize="16" Margin="0,4"/>
                            <TextBlock x:Name="StWins" Text="0" Grid.Row="1" Grid.Column="1" Foreground="#4ecca3" FontSize="16" FontWeight="Bold" Margin="0,4"/>

                            <TextBlock Text="Losses:" Grid.Row="2" Grid.Column="0" Foreground="#b0b0b0" FontSize="16" Margin="0,4"/>
                            <TextBlock x:Name="StLosses" Text="0" Grid.Row="2" Grid.Column="1" Foreground="#e94560" FontSize="16" FontWeight="Bold" Margin="0,4"/>

                            <TextBlock Text="Draws:" Grid.Row="3" Grid.Column="0" Foreground="#b0b0b0" FontSize="16" Margin="0,4"/>
                            <TextBlock x:Name="StDraws" Text="0" Grid.Row="3" Grid.Column="1" Foreground="#f39c12" FontSize="16" FontWeight="Bold" Margin="0,4"/>

                            <TextBlock Text="Win Rate:" Grid.Row="4" Grid.Column="0" Foreground="#b0b0b0" FontSize="16" Margin="0,4"/>
                            <TextBlock x:Name="StRate" Text="0%" Grid.Row="4" Grid.Column="1" Foreground="#3498db" FontSize="16" FontWeight="Bold" Margin="0,4"/>
                        </Grid>
                    </Border>

                    <Button Content="Close" Style="{StaticResource MainBtn}" Click="BtnCloseStats_Click" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>