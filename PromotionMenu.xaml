<UserControl x:Class="Chess.PromotionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#CC000000">
        <Border Background="#16213e" 
                CornerRadius="12" 
                Width="380"
                Padding="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderThickness="2"
                BorderBrush="#e94560">
            <StackPanel>
                <TextBlock Text="Choose Promotion" 
                          Foreground="White" 
                          FontSize="24"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,18"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#0f3460"
                            CornerRadius="8"
                            Margin="3"
                            Cursor="Hand"
                            MouseDown="QueenImg_MouseDown">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a5490"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Margin="8">
                            <Image x:Name="QueenImg"
                                   Source="Assets/QueenW.png"
                                   Height="55"
                                   Margin="0,5"/>
                            <TextBlock Text="Queen" 
                                      Foreground="White"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" 
                            Background="#0f3460"
                            CornerRadius="8"
                            Margin="3"
                            Cursor="Hand"
                            MouseDown="RookImg_MouseDown">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a5490"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Margin="8">
                            <Image x:Name="RookImg"
                                   Source="Assets/RookW.png"
                                   Height="55"
                                   Margin="0,5"/>
                            <TextBlock Text="Rook" 
                                      Foreground="White"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" 
                            Background="#0f3460"
                            CornerRadius="8"
                            Margin="3"
                            Cursor="Hand"
                            MouseDown="BishopImg_MouseDown">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a5490"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Margin="8">
                            <Image x:Name="BishopImg"
                                   Source="Assets/BishopW.png"
                                   Height="55"
                                   Margin="0,5"/>
                            <TextBlock Text="Bishop" 
                                      Foreground="White"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" 
                            Background="#0f3460"
                            CornerRadius="8"
                            Margin="3"
                            Cursor="Hand"
                            MouseDown="KnightImg_MouseDown">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a5490"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Margin="8">
                            <Image x:Name="KnightImg"
                                   Source="Assets/KnightW.png"
                                   Height="55"
                                   Margin="0,5"/>
                            <TextBlock Text="Knight" 
                                      Foreground="White"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Border>
</UserControl>