<Window x:Class="Chess.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:local="clr-namespace:Chess"
        Title="Confirm" 
        Height="300" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="#16213e" 
            CornerRadius="12" 
            BorderThickness="3"
            BorderBrush="#e94560">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="380">

            <TextBlock Text="Hold Up!" 
                      Foreground="White" 
                      FontSize="28"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,30,0,20"/>

            <TextBlock Text="Are you sure you want to leave?" 
                      Foreground="#b0b0b0" 
                      FontSize="16"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      Margin="0,0,0,15"/>

            <Border Background="Red" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,0,0,20">
                <TextBlock Text="If you leave now, this game will count as a loss." 
                          Foreground="White" 
                          FontSize="15"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"/>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <Button Content="Go Back" 
                       Background="#16213e"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Padding="25,12"
                       Margin="0,0,15,0"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="#0f3460">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0f3460"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Leave Game" 
                       Background="#e94560"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Padding="25,12"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Confirm_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="#c73549">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d94560"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>