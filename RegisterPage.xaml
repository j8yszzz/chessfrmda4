<Window x:Class="Chess.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game - Register" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="BtnReg" TargetType="Button">
            <Setter Property="Background" Value="#4ecca3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3daa82"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnBack" TargetType="Button">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0f3460"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
        </Style>

        <Style x:Key="PassStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

            <TextBlock Text=" Chess.lol " 
                      Foreground="White" 
                      FontSize="40"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10" FontFamily="MS Reference Sans Serif"/>

            <TextBlock Text="Create New Account" 
                      Foreground="#b0b0b0" 
                      FontSize="18"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <Border Background="#16213e" 
                    CornerRadius="15" 
                    Padding="30"
                    BorderThickness="2"
                    BorderBrush="#0f3460">

                <StackPanel>
                    <TextBlock Text="Username" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtUsername" Style="{StaticResource InputStyle}" KeyDown="Input_KeyDown"/>
                    <TextBlock Text="(Min 3 characters)" Foreground="#666" FontSize="11" Margin="0,2,0,0"/>

                    <TextBlock Text="Email (Optional)" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                    <TextBox x:Name="TxtEmail" Style="{StaticResource InputStyle}" KeyDown="Input_KeyDown"/>

                    <TextBlock Text="Password" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="TxtPassword" Style="{StaticResource PassStyle}" KeyDown="Input_KeyDown"/>
                    <TextBlock Text="(Min 6 characters)" Foreground="#666" FontSize="11" Margin="0,2,0,0"/>

                    <TextBlock Text="Confirm Password" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="TxtConfirm" Style="{StaticResource PassStyle}" KeyDown="Input_KeyDown"/>

                    <TextBlock x:Name="TxtMsg" FontSize="13" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>

                    <Button Content="Register" Style="{StaticResource BtnReg}" Click="BtnRegister_Click" Margin="0,20,0,0"/>
                    <Button Content="Back to Login" Style="{StaticResource BtnBack}" Click="BtnBack_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>