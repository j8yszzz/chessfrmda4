<UserControl x:Class="Chess.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#CC000000">
        <Border Background="#16213e" 
                CornerRadius="12" 
                Width="300"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderThickness="2"
                BorderBrush="#e94560">
            <StackPanel>
                <TextBlock Text="Game Paused" 
                          Foreground="White" 
                          FontSize="26"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <Button Content="Continue" 
                       Background="#16213e"
                       Foreground="White"
                       FontSize="18"
                       Padding="20,10"
                       Margin="0,5"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Continue_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="#0f3460">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0f3460"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Back to Home" 
                       Background="#16213e"
                       Foreground="White"
                       FontSize="18"
                       Padding="20,10"
                       Margin="0,5"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="BackToHome_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="#0f3460">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0f3460"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Border>
</UserControl>