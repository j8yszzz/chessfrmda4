<Window x:Class="Chess.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game - Login" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/icon.ico"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c7354d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
        </Style>

        <Style x:Key="PassStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

            <TextBlock Text="Chess.lol" 
                      Foreground="White" 
                      FontSize="40"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10" FontFamily="MS Reference Sans Serif"/>

            <TextBlock Text="Login to Your Account" 
                      Foreground="#b0b0b0" 
                      FontSize="18"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <Border Background="#16213e" 
                    CornerRadius="15" 
                    Padding="30"
                    BorderThickness="2"
                    BorderBrush="#0f3460">

                <StackPanel>
                    <TextBlock Text="Username" 
                              Foreground="White" 
                              FontSize="14"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtUsername"
                            Style="{StaticResource InputStyle}"
                            KeyDown="Input_KeyDown"/>

                    <TextBlock Text="Password" 
                              Foreground="White" 
                              FontSize="14"
                              Margin="0,15,0,5"/>
                    <PasswordBox x:Name="TxtPassword"
                                Style="{StaticResource PassStyle}"
                                KeyDown="Input_KeyDown"/>

                    <TextBlock x:Name="TxtError"
                              Foreground="#e94560"
                              FontSize="13"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"
                              Visibility="Collapsed"/>

                    <Button Content="Login" 
                           Style="{StaticResource BtnStyle}"
                           Click="BtnLogin_Click"
                           Margin="0,20,0,0"/>

                    <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Run Text="Don't have an account? " 
                             Foreground="#b0b0b0" 
                             FontSize="14"/>
                        <Hyperlink Click="LinkRegister_Click" Foreground="#3498db">
                            <Run Text="Register here" FontSize="14"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>